@{
    ViewBag.Title = "PersonalRecord";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="PersonalRecordCtrl" class="container" style="margin-top: 60px">
    <div class="form-group d-flex justify-content-between">
        <h3>{{Member.Name}}</h3>
        <div>
            <a class="btn btn-outline-primary btn-lg flex-md-row-reverse" href="Member\Record#!/AllMemberRecord" role="button">返回</a>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col" ng-repeat="dateScores in Member.DateScores">
            <ul class="list-group">
                <li class="list-group-item active">{{dateScores.Date}}</li>
                    <div ng-repeat="scores in dateScores.Scores track by $index">
                        <li class="list-group-item">{{scores}}</li>
                    </div>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/PersonalRecordCtrl.js"></script>
}