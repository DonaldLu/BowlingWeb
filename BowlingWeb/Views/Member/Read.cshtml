
@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>

<div ng-controller="ReadCtrl" class="container" style="margin-top: 60px">
    <div>請輸入資料</div>
    <table>
        <tr>
            <td><input id="C00" /></td>
            <td><input id="C01" /></td>
            <td><input id="C02" /></td>
            <td><input id="C03" /></td>
        </tr>
        <tr>
            <td><input id="C10" /></td>
            <td><input id="C11" /></td>
            <td><input id="C12" /></td>
            <td><input id="C13" /></td>
        </tr>
        <tr>
            <td><input id="C20" /></td>
            <td><input id="C21" /></td>
            <td><input id="C22" /></td>
            <td><input id="C23" /></td>
        </tr>
    </table>
    <form action="@Url.Content("~/Member/ReadData?callback=parent.fillCsv")" method="POST" enctype="multipart/form-data" target="resultFrame">
        <button type="submit" id="btnReadExcel">從Excel匯入</button>
        <input type="file" name="excelFile" />
        <input type="submit" value="匯入" ng-click="ReadData()" class="btn btn-warning" />
    </form>
    <iframe name="resultFrame" style="display:none;"></iframe>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/ReadCtrl.js"></script>
}

