
@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>

<div ng-controller="ReadCtrl" class="container" style="margin-top: 100px">

    <div class="form-group d-flex justify-content-between">
        <h5>Read</h5>
        <div class="row">
            <div class="col-sm-3" ng-repeat="item in Member">
                <div class="card border-primary mb-3" style="max-width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{item.Name}}</h5>
                        <p class="card-text">{{item.Name}}</p>
                        <input type="submit" value="填問卷" ng-click="ReadData()" class="btn btn-warning" />
                        <button class="btn btn-success" ng-click="ReadData()">已填寫</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/ReadCtrl.js"></script>
}

