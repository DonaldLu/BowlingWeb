
@{
    ViewBag.Title = "Register";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="RegisterCtrl" class="container" style="margin-top: 60px">
    <br />
    <div class="panel-body">
        <div class="form-group">
            <label>帳號</label>
            <input type="text" class="control-label col-md-2" ng-model="Member.Account">
            <br />
        </div>
        <div class="form-group">
            <label>密碼</label>
            <input type="password" class="control-label col-md-2" ng-model="Member.Password">
            <br />
        </div>
        <div class="form-group">
            <label>姓名</label>
            <input type="text" class="control-label col-md-2" ng-model="Member.Name">
            <br />
        </div>
        <div class="form-group">
            <label>EMail</label>
            <input type="text" class="control-label col-md-2" ng-model="Member.Email">
            <br />
        </div>
    </div>
    <div class="panel-footer">
        <button type="button" ng-click="CreateMember()" class="btn btn-primary">註冊</button>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/RegisterCtrl.js"></script>
}