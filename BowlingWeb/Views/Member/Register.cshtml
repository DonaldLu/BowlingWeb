
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>註冊</h2>

<div ng-controller="RegisterCtrl" class="container" style="margin-top: 60px">
    <!--使用 Bootstrap 設計註冊表單-->
    <div class="panel panel-primary">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <div class="form-group">
                <label>帳號</label>
                <input type="text" class="form-control" v-model="form.UserID">
            </div>
            <div class="form-group">
                <label>密碼</label>
                <input type="password" class="form-control" v-model="form.UserPwd">
            </div>
            <div class="form-group">
                <label>姓名</label>
                <input type="text" class="form-control" v-model="form.UserName">
            </div>
            <div class="form-group">
                <label>EMail</label>
                <input type="text" class="form-control" v-model="form.UserEmail">
            </div>
        </div>
        <div>
            <input class="btn btn-primary" type="button" value="儲存" ng-click="CreateUser()" />
            <a ng-href="~/Home/Index">  返回首頁</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/RegisterCtrl.js"></script>
}
