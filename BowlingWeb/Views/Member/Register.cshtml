
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div ng-controller="RegisterCtrl" class="container" style="margin-top: 60px">
    <div class="panel-heading">註冊</div>
    <div class="panel-body">
        <div class="form-group">
            <label>帳號</label>
            <input type="text" class="form-control" ng-model="firstName">
        </div>
        <div class="form-group">
            <label>密碼</label>
            <input type="password" class="form-control" ng-model="lastName">
        </div>
        <div class="form-group">
            <label>姓名</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>EMail</label>
            <input type="text" class="form-control">
        </div>
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-primary">註冊</button>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/RegisterCtrl.js"></script>
}