@{
    ViewBag.Title = "UsersRecord";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>成員們</h6>

<div ng-controller="UsersRecordCtrl" class="container" style="margin-top: 60px">
    <div class="row">
        <div class="col-sm-3" ng-repeat="user in Member">
            <h4>{{user.Name}}</h4>
            <div ng-repeat="skillScores in user.SkillScores">
                <h5>{{skillScores.Skill}}</h5>
                <h5>{{skillScores.Scores}}</h5>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/WebApp/Member/UsersRecordCtrl.js"></script>
}