<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>無聊滾球</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Bowling Balls - 紀錄平台</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/Content/fontawesome.css">
    <link rel="stylesheet" href="~/Content/templatemo-space-dynamic.css">
    <link rel="stylesheet" href="~/Content/animated.css">
    <link rel="stylesheet" href="~/Content/owl.css">

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-ui-router.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            <h4>無聊<span>滾球</span></h4>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section">@Html.ActionLink("首頁", "Index", "Home")</li>
                            <li class="scroll-to-section">@Html.ActionLink("關於我們", "About", "Home")</li>
                            <li class="scroll-to-section">@Html.ActionLink("個人紀錄", "Record", "Member")</li>
                            <li class="scroll-to-section">@Html.ActionLink("統計圖表", "Chart", "Member")</li>
                            <li class="scroll-to-section">@Html.ActionLink("註冊", "Register", "Member")</li>
                            <li class="scroll-to-section"><div class="main-red-button">@Html.ActionLink("登入", "Login", "Member")</div></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.25s">
                    <p>
                        © @DateTime.Now.Year 無聊滾球 版權所有 翻印必究。

                        <br>Design: <a rel="nofollow" href="https://templatemo.com">Donald Lu</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

    <script src="~/Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/js/owl-carousel.js"></script>
    <script src="~/Scripts/js/animation.js"></script>
    <script src="~/Scripts/js/imagesloaded.js"></script>
    <script src="~/Scripts/js/templatemo-custom.js"></script>

    <!-- Bootstrap core JS-->
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>*@
    <!-- SimpleLightbox plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>